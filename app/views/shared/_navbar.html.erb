<div class="navbar navbar-expand-sm navbar-light navbar-dfad">
  <h1 class="navbar-title"><%= link_to "Dog for a Day", root_path %> <i class="fas fa-dog nav-icon"></i></h1>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <div>
            <%= form_tag dogs_path, method: :get do %>
              <%= text_field_tag :query, 
                params[:query]
              %>
              <%= submit_tag "Search", class: "btn search-btn" %>
            <% end %>
          </div>
        </li>
        <li class="nav-item">
          <button type="button" id="reg-dog-btn" class="btn"><%= link_to "Register your dog", new_dog_path %></button>
        </li>
        <li>
          <%= link_to pages_path do %>
            <%= image_tag "avatar", class: "avatar" %>
          <% end %>
        </li>
        <li class="nav-item dropdown">
          <div class="d-flex justify-content-center align-items-center h-100" id="navbarDropdown" data-toggle="dropdown"><i class="fas fa-bars fa-2x"></i></div> 
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My account", pages_path, class: "dropdown-item" %>
            <%= link_to "My bookings", pages_my_bookings_path, class: "dropdown-item" %>
            <%= link_to "My dogs", pages_my_dogs_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= form_tag dogs_path, method: :get do %>
            <%= text_field_tag :query,
                params[:query]
            %>
            <%= submit_tag "Search", class: "btn search-btn" %>
          <% end %>
        </li>
        <li class="nav-item">
          <button type="button" class="btn" id="reg-dog-btn"><%= link_to "Register your dog", new_user_session_path %></button>
        </li>
        <li class="nav-item">
          <button type="button" class="btn" id="login-btn"><%= link_to "Login", new_user_session_path %></button>
        </li>
      <% end %>
    </ul>
  </div>
</div>