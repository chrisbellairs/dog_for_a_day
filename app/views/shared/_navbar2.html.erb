<div class="navbar navbar-expand-sm navbar-light">
  <h1 class="navbar-title"><%= link_to "Dog for a Day", root_path %></h1>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">

          <%= form_tag dogs_path, method: :get do %>
            <%= text_field_tag :query,
                params[:query]
            %>
            <%= submit_tag "Search" %>
          <% end %>

        </li>
        <li class="nav-item">
          <%= link_to "Home", "/", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "View All Dogs", "dogs", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Account", pages_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item not-logged-in">
          <div><%= link_to "Register your dog", new_user_session_path, class: "nav-link" %></div>
          <div><%= link_to "Login", new_user_session_path, class: "nav-link" %></div>
        </li>
      <% end %>
    </ul>
  </div>
</div>