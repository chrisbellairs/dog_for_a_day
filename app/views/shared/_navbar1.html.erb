<div class="navbar">
  <h1 class="navbar-title"><%= link_to "Dog for a Day", root_path %></h1>

  <div class="navbar-items">
    <%= form_tag dogs_path, method: :get do %>
      <%= text_field_tag :query,
          params[:query]
      %>
      <%= submit_tag "Search" %>
    <% end %>
    
    <% if user_signed_in? %>
      <button type="button" class="reg-dog-btn"><%= link_to "Register your dog", new_dog_path %></button>
      <img src="" alt="Avatar" class="navbar-avatar">
      <div class="dropdown">
        <button class="dropbtn"><i class="fas fa-bars"></i></button>
        <div class="navbar-dropdown-content dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "My account", pages_path, class: "dropdown-item" %>
          <%= link_to "My bookings", pages_path, class: "dropdown-item" %>
          <%= link_to "My dogs", pages_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </div>
    <% else %>
      <button type="button" class="reg-dog-btn"><%= link_to "Register your dog", new_user_session_path %></button>
      <button type="button" class="login-btn"><%= link_to "Login", new_user_session_path %></button>
    <% end %>
  </div>

</div>
