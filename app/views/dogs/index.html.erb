<br>
<% @dogs.each do |dog| %>
  <div class="index-card">
    <div>
      <% if dog.photo.attached? %>
        <div><%= cl_image_tag dog.photo.key, height: 180, width: 270, crop: :fill %></div>
      <% end %>
    </div>
    <div>
      <h2>
        <%= dog.name %>
      </h2>
      <p>
        <%= dog.biography %>
      </p>
      <div class="index-card-stats">
        <div class="stat">
          <i class="fas fa-dog"></i>
          <%= dog.breed %>
        </div>
        <div class="stat borders">
          <i class="fas fa-shoe-prints"></i>
          <%= dog.walk_length %>
        </div>
        <div class="stat">
          <i class="fas fa-ruler-horizontal"></i>
          <%= dog.dog_size %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<hr>
<%= link_to '<i class="fas fa-plus"></i> Add a new dog'.html_safe, new_dog_path %>
<div id="map"
   style="width: 100%; height: 600px;"
   data-markers="<%= @markers.to_json %>"
   data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

