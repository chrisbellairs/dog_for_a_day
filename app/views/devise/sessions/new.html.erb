<div class="container">
  <div class="login-background">
    <div class="login-form">
      <div class="login-form-heading">
        <h3>Log in</h3>
      </div>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                label: "Email:",
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                label: "Password:",
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn-login" %>
  </div>
<% end %>
<div class="login-links">
  <%= link_to "<u>Forgot your password?</u>".html_safe, new_password_path(resource_name) %><br />
  <%= link_to "Don't have an account? <u>Sign up</u>".html_safe, new_registration_path(resource_name) %>
</div>
</div>
</div>
</div>


